
  {
  "manifest_version": 3,
  "name": "Claude Bridge",
  "version": "1.0.0",
  "description": "Send code blocks from Claude.ai directly to Claude Code terminal",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://claude.ai/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}